@model BookstoreA.Models.ViewModels.BookFormViewModel

@{
    ViewData["Title"] = "Apagar livro";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja apagar este livro?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ReleaseYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseYear)
        </dd>
       <dt class="col-sm-2 text-primary-emphasis">
            @Html.DisplayNameFor(model => model.Genres)
       </dt>
       <dd class="col-sm-10">
            @foreach (Genre genre in Model.Genres)
            {
            <a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.Id" class="text-primary">
                    @Html.DisplayFor(genreItem => genre.Name)
            </a>
            <br />
            }
        </dd>
     </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Book.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
